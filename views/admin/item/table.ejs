<div class="tab-pane fade show active" id="show-item" role="tabpanel" aria-labelledby="home-tab">
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>Country</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% let i = 1 %>
            <% items.forEach((item,index) => { %>
            <tr>
              <td><%= i %></td>
              <td><%= item.title %></td>
              <td>$ <%= item.price %></td>
              <td><%= item.country %></td>
              <td><%= item.city %></td>
              <td>
                <form action="/admin/item/<%= item._id %>?_method=DELETE" method="POST">
                  <a href="/admin/item/show-image/<%= item._id %>" class="btn btn-info btn-circle btn-sm"><i
                      class="fas fa-image"></i></a>
                  <a href="/admin/item/<%= item._id %>" class="btn btn-warning btn-circle btn-sm "><i
                      class="fas fa-edit"></i></a>
                  <button onclick="return confirm('Are You Sure ?')" class="btn btn-danger btn-circle btn-sm"><i
                      class="fas fa-trash"></i></button>
                  <a href="/admin/item/show-detail/<%= item._id %>" class="btn btn-success btn-circle btn-sm"><i
                      class="fas fa-plus"></i></a>
                </form>
              </td>
            </tr>
            <% i++ %>
            <% })%>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>